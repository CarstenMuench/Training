echo Do you want to commit all documents or just one?
echo Type "1" for one and "all" for all:
read $NumberofCommit
if test $NumberofCommit = "1"
	then
		echo What is the Name of the File you want to commit?
		read $Filename
elif test $NumberofCommit = "all"
	then
		echo Commiting all Files...
		git commit -m "This File was autocommited by a script"
fi
